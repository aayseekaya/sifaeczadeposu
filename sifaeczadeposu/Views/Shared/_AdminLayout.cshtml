<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/assets/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/assets/js")
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <div id="wrapper">
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="adjust-nav">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                             <font color="#4A7FD4"><h1> <b>ŞİFA ECZA DEPOSU</b> </h1></font> 
                        </div>

                        <span class="logout-spn">
                            <a href="#" style="color:#fff;">LOGOUT</a>
                        </span>
                    </div>
                </div>
                <!-- /. NAV TOP  -->
                <div class="col-md-2" style="margin-top:20px;">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Admin Menü</h4>
                        </div>
                        <div class="panel-body">
                            <ul class="nav nav-pills nav-stacked">
                                <li>@Html.ActionLink("Slide", "Slider", "Admin")</li>
                                <li>@Html.ActionLink("Fuar", "Fuar", "Admin")</li>
                                <li>@Html.ActionLink("İlaç", "Ilaclar", "Admin")</li>
                                <li>@Html.ActionLink("Duyurular", "Duyurular", "Admin")</li>
                                <li>@Html.ActionLink("ÖneriSikayet", "OneriSikayet", "Admin")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10" style="margin-top:20px;">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
