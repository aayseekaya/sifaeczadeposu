@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><button class="btn btn-default giris " type="submit" style="float:right">@Html.ActionLink("KAYDOL", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</button></li>
        <li><button class="btn btn-default giris " type="submit" style="float:right">@Html.ActionLink("e-ECZANE GİRİŞ", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</button></li>
      
    </ul>
}
