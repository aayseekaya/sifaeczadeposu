
@{
    ViewBag.Title = "Kaydol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model sifaeczadeposu.Models.uye

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("kaydol", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="panel panel-default" style="margin-top:75px;">
                
                <div class="panel-body">
                    <div class="row">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-sm-2 control-label">Ad</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.ad, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-sm-2 control-label">Soyad</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.soyad, new { @class = "form-control"})
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-sm-2 control-label">Kullanıcı Adı</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.k_ad, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-sm-2 control-label">Sifre</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.sifre, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-sm-2 control-label">tel</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.tel, new { @class = "form-control"})
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <label class="col-sm-2 control-label">Rol</label>
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.cins, new { @class = "form-control"})
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="btn-toolbar" style="float:left; padding-left:175px;">
                                <input type="submit" value="Kaydet" class="btn btn-primary" style="text-align:left;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>









