
@{
    ViewBag.Title = "Blog Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model sifaeczadeposu.Models.fuar

<div class="row">
    <div class="col-sm-12">
        @using (Html.BeginForm("FuarDuzenle", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m => m.ID)
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Fuar Düzenle</h4>
                </div>
                <div class="panel-body">
                    <div class="row">
                       <div class="form-group">
                            <div class="col-md-12">
                                <label class="col-sm-2 control-label">Başlık</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.fuaradi, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="col-sm-2 control-label">İçerik</label>
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(m => m.aciklama, new { @class = "form-control", rows = 6, columns = 40 })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <div class="btn-toolbar pull-right">
                                <input type="submit" value="Güncelle" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

